<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<!-- Beans to add to the current Application context definition -->
  
<beans>
	
    <bean id="conceptmanagementUrlMapping" class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
    	<property name="mappings">
            <props>
	           <prop key="module/@MODULE_ID@/basicSearch.form">BasicSearchFormController</prop>
	           <prop key="module/@MODULE_ID@/advancedSearch.form">AdvancedSearchFormController</prop>
	    	</props>
		</property>
    </bean>
	
    <!-- Controllers -->
	
    <bean id="BasicSearchFormController" class="@MODULE_PACKAGE@.web.controller.BasicSearchFormController">
    	<property name="sessionForm"><value>true</value></property>
		<property name="commandName"><value>conceptSearch2</value></property>
		<property name="formView"><value>/module/@MODULE_ID@/basicSearchForm</value></property>
		<property name="successView"><value>/module/@MODULE_ID@/basicSearchForm</value></property>
    </bean>
    
    <bean id="AdvancedSearchFormController" class="@MODULE_PACKAGE@.web.controller.AdvancedSearchFormController">
    	<property name="sessionForm"><value>true</value></property>
		<property name="commandName"><value>dataTypes2</value></property>
		<property name="formView"><value>/module/@MODULE_ID@/advancedSearchForm</value></property>
		<property name="successView"><value>/module/@MODULE_ID@/advancedSearchForm</value></property>
    </bean>
	
    <!-- /Controllers -->
</beans>
